---
interface PricingTier {
    number: number;
    name: string;
    subtitle: string;
    price: string;
    description: string;
    features: string[];
    note?: string;
    link: string;
    linkText: string;
}

const pricingTiers: PricingTier[] = [
    {
        number: 1,
        name: "BASIC PACK",
        subtitle: "Desa Informasi",
        price: "Rp. 4.000.000",
        description: "Cocok untuk: desa yang baru mulai digitalisasi",
        features: [
            "Profil desa",
            "Visi & misi",
            "Struktur organisasi",
            "Berita & pengumuman",
            "Galeri kegiatan",
            "Kontak layanan & peta desa",
            "Admin panel",
            "Responsive (HP & laptop)",
            "SSL & keamanan dasar",
        ],
        link: "https://dirgahayu.desainkode.site/",
        linkText: "Lihat Contoh",
    },
    {
        number: 2,
        name: "STANDARD PACK",
        subtitle: "Desa Digital",
        price: "Rp. 7.000.000",
        description: "Cocok untuk: Desa aktif administrasi & pelayanan",
        features: [
            "Semua fitur Paket Basic, ditambah:",
            "Menu layanan umum administrasi desa",
            "Kelola Data Statistik (Data Penduduk, APBDes, Stunting, Bansos, IDM)",
            "Hak akses user (admin/operator)",
            "Backup data berkala",
        ],
        link: "https://mandalasari.desainkode.site/",
        linkText: "Lihat Contoh",
    },
    {
        number: 3,
        name: "PREMIUM PACK",
        subtitle: "Desa Smart",
        price: "Rp. 9.000.000",
        description:
            "Cocok untuk: Desa yang ingin tampilan modern & performa tinggi",
        features: [
            "Semua fitur Paket Standard, ditambah:",
            "Custom desain tampilan sesuai kebutuhan",
            "Menu layanan administrasi terintegrasi (custom sesuai kebutuhan)",
            "Tampilan website modern & super ringan",
            "Sistem siap dikembangkan",
            "Optimasi performa",
        ],
        link: "https://wa.me/6281234567890",
        linkText: "Mulai Konsultasi",
    },
];
---

<section
    class="min-h-screen py-12 px-4 font-montserrat bg-linear-to-br from-dark-bg via-[rgba(47,36,69,0.99)] to-dark-mid"
    style="background: linear-gradient(-48.6deg, #0d0a13 35.2%, rgba(47, 36, 69, 0.99) 74%, #1b1a1a 100%);"
>
    <div class="max-w-200 mx-auto">
        <header class="text-center mb-12">
            <h1
                class="font-palanquin text-4xl sm:text-[2.5rem] font-semibold text-white mb-2 tracking-wide"
            >
                Layanan Digitalisasi Desa
            </h1>
            <p
                class="font-cormorant italic font-medium text-2xl sm:text-[1.5rem] text-white"
            >
                ~ Price List ~
            </p>
        </header>

        <div class="flex flex-col gap-8">
            {
                pricingTiers.map((tier) => (
                    <article
                        class:list={[
                            "relative p-6 rounded-xl transition-all duration-300",
                            "bg-white/3 border border-white/15",
                            "hover:border-white/30 hover:bg-white/5",
                            tier.number === 2 &&
                                "border-2! border-purple-brand! bg-purple-brand/8! shadow-[0_0_30px_rgba(94,23,235,0.2)] hover:border-purple-light! hover:bg-purple-brand/12!",
                        ]}
                    >
                        {tier.number === 2 && (
                            <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-linear-to-br from-purple-brand to-purple-light py-1.5 px-5 rounded-full z-10">
                                <span class="font-montserrat text-xs font-semibold text-white uppercase tracking-wider">
                                    Recommended
                                </span>
                            </div>
                        )}
                        <div class="flex items-center gap-4 py-4">
                            <div
                                class:list={[
                                    "w-14 h-14 flex items-center justify-center shrink-0",
                                    tier.number === 2
                                        ? "bg-purple-brand"
                                        : "bg-white",
                                ]}
                            >
                                <span
                                    class:list={[
                                        "font-montserrat text-[2rem] font-bold",
                                        tier.number === 2
                                            ? "text-white"
                                            : "text-dark-mid",
                                    ]}
                                >
                                    {tier.number}
                                </span>
                            </div>
                            <div class="flex-1">
                                <h2 class="font-montserrat text-base font-bold text-white tracking-wide m-0">
                                    {tier.name}
                                </h2>
                                <p class="font-montserrat text-sm font-normal text-white mt-1">
                                    {tier.subtitle}
                                </p>
                            </div>
                            <div class="text-right">
                                <span class="font-montserrat text-xl sm:text-2xl font-semibold text-gold">
                                    {tier.price}
                                </span>
                            </div>
                        </div>

                        <div class="py-2 pb-6">
                            <p class="font-cormorant italic font-semibold text-white text-base mb-4">
                                {tier.description}
                            </p>
                            <p class="font-montserrat font-semibold text-white text-sm mb-2">
                                Fitur:
                            </p>
                            <ul class="list-none p-0 m-0">
                                {tier.features.map((feature) => (
                                    <li class="font-montserrat font-normal text-white text-sm leading-7">
                                        ‚óè {feature}
                                    </li>
                                ))}
                            </ul>
                            {tier.note && (
                                <p class="font-montserrat font-normal text-white text-sm mt-4 text-right">
                                    {tier.note}
                                </p>
                            )}

                            <div class="mt-6 text-center">
                                <a
                                    href={tier.link}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class:list={[
                                        "inline-block font-montserrat font-semibold text-sm py-3 px-8 rounded-full transition-all duration-300",
                                        tier.number === 2
                                            ? "bg-linear-to-r from-purple-brand to-purple-light text-white hover:shadow-[0_0_20px_rgba(94,23,235,0.4)] hover:scale-105"
                                            : tier.number === 3
                                              ? "bg-gold text-dark-bg hover:bg-[#ffe4a8] hover:scale-105"
                                              : "border-2 border-white/30 text-white hover:bg-white/10 hover:border-white/50",
                                    ]}
                                >
                                    {tier.linkText}
                                </a>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>
